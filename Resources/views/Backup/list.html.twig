{% extends '@ManuelTranslation/base.html.twig' %}

{% trans_default_domain "ManuelTranslationBundle" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .code-text {
            white-space: pre; /* CSS 2.0 */
            white-space: pre-wrap; /* CSS 2.1 */
            white-space: pre-line; /* CSS 3.0 */
            white-space: -pre-wrap; /* Opera 4-6 */
            white-space: -o-pre-wrap; /* Opera 7 */
            white-space: -moz-pre-wrap; /* Mozilla */
            white-space: -hp-pre-wrap; /* HP Printers */
            word-wrap: break-word; /* IE 5+ */
        }
    </style>
{% endblock %}

{% block page_header %}
    {{ 'label.reviews'|trans }}
{% endblock %}

{% block page_header_rigth %}
    <a href="{{ path('manuel_translation_list') }}" class="btn btn-default">{{ 'label.back'|trans }}</a>
{% endblock %}

{% block content %}
<ul>
    {% for backup, date in backups %}
    <li><a href="{{ path('manuel_translation_backup_restore',{backup: backup}) }}">{{ date }}</a></li>
    {% endfor %}
</ul>
{% endblock %}

{% block javascripts %}

{% endblock %}
