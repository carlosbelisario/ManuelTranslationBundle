{% extends '@ManuelTranslation/base.html.twig' %}

{% trans_default_domain "ManuelTranslationBundle" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .code-text {
            white-space: pre; /* CSS 2.0 */
            white-space: pre-wrap; /* CSS 2.1 */
            white-space: pre-line; /* CSS 3.0 */
            white-space: -pre-wrap; /* Opera 4-6 */
            white-space: -o-pre-wrap; /* Opera 7 */
            white-space: -moz-pre-wrap; /* Mozilla */
            white-space: -hp-pre-wrap; /* HP Printers */
            word-wrap: break-word; /* IE 5+ */
        }
    </style>
{% endblock %}

{% block page_header %}{{ 'label.translation_list'|trans }}{% endblock %}

{% block content %}
    <table class="table table-bordered">
        {% for log in logs %}
            <tr>
                <td class="col-xs-2">
                    <dl>
                        <dt>{{ 'label.version'|trans }}</dt>
                        <dd>{{ log.version }}</dd>
                        <dt>{{ 'label.log_date'|trans }}</dt>
                        <dd>{{ log.loggedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </td>
                <td>
                    <table class="table table-bordered table-condensed">
                        {% if log.data.code is defined %}
                            <tr>
                                <th class="col-sm-2">{{ 'label.code'|trans }}</th>
                                <td class="col-sm-4">{{ log.data.code }}</td>
                            </tr>
                        {% endif %}
                        {% if log.data.domain is defined %}
                            <tr>
                                <th class="col-sm-2">{{ 'label.domain'|trans }}</th>
                                <td class="col-sm-4">{{ log.data.domain }}</td>
                            </tr>
                        {% endif %}
                        {% if log.data.values is defined %}
                            {% for locale, value in log.data.values %}
                                <tr>
                                    <th class="col-sm-2">{{ locale|title }}</th>
                                    <td class="col-sm-4">
                                        <pre>{{ value }}</pre>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        {% if log.data.autogenerated is defined %}
                            <tr>
                                <th class="col-sm-2">{{ 'label.autogenerated'|trans }}</th>
                                <td class="col-sm-4">{{ (log.data.autogenerated ? 'label.yes' : 'label.no' )|trans }}</td>
                            </tr>
                        {% endif %}
                        {% if log.data.active is defined %}
                            <tr>
                                <th class="col-sm-2">{{ 'label.active'|trans }}</th>
                                <td class="col-sm-4">{{ (log.data.active ? 'label.yes' : 'label.no' )|trans  }}</td>
                            </tr>
                        {% endif %}
                    </table>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block javascripts %}

{% endblock %}
